<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/searchListImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/searchListDesc"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchListTitle"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/searchListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/acme"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/searchListImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchListDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/searchListTitle"
        app:layout_constraintTop_toBottomOf="@+id/searchListTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>